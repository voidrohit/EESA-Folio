    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
  <body>
    <div class="titlebar">
      <a href="#header" class="toggle"></a>
      <span class="title">
        <a href="#"><%=username%></a>
      </span>
