    </div>
    <div id="sidebar">
      <div class="header">
            <img src="<%=src%>" alt="/images/avatar.jpg" class="image-avatar">
            <form class="inputfile" action="/dashboard/<%=pass%>/<%=username%>" method="post" enctype="multipart/form-data">
              <input style="display: none;" type="text" id="pass" name="pass" value="<%=pass%>">
              <input style="display: none;" type="text" id="username" name="username" value="<%=username%>">
              <input style="display: <%=style3%>" type="file" id="image" name="file" accept="image/*"/>
              <button style="display: <%=style3%>" type="submit">Submit</button>
            </form>
            <h1 class="programmer">EESA Folio</h1>
            <!-- <h1 class="programmer">Folio</h1> -->
            <h3 class="italics">For the students, by the Students</h3>
            <p>Made with
              <span class="love">â™¥</span>
               by <a href="https://eesanitp.herokuapp.com/">EESA</a>
            </p>
            <section class="columns">
              <ul>
                <li>
                  <a href="#web">
                    <p>WEB</p>
                  </a>
                </li>
                <li>
                  <a href="#android"><p>ANDROID</p></a>
                </li>
                <li>
                    <a href="#android"><p>CORE</p></a>
                  </li>
              </ul>
            </section>
            <section class="connect">
                <ul>
                    <li>
                        <form action="/sign" method="get">
                            <button style="display: <%=style%>" >SignIn/SignUp</button>
                        </form>
                    </li>
                    <li>
                      <form action="/logout" method="post">
                        <button style="display: <%=style3%>" >LogOut</button>
                      </form>
                    </li>
                </ul>
            </section>
      </div>
    </div>
    <section>
      <h1 class="heading">
        2k19 batch
      </h1>
      <h2 class="subheading">
        Electrical Engineering Student's Assosiaction
      </h2>
      <h3 id="web">WEB</h3>
    </section>
      <div class="card-wrapper">
        <% for(var i=0; i<itemsWeb.length; i++) { %>
          <% console.log(itemsWeb[i].username, authuser) %>
          <% if(itemsWeb[i].username == authuser) { %>
            <form action="/about/<%=itemsWeb[i].username%>" style="display: <%=style2%>" method="get">
              <button type="submit">
                <div class="card">
                  <img src="data:image/<%=itemsWeb[i].img.contentType%>;base64,<%=itemsWeb[i].img.data.toString('base64')%>" alt="/images/avatar.jpg" class="pic1">
                  <h1 class="tech"><%= itemsWeb[i].name %></h1>
                </div>
              </button>
            </form>
          <% } else { %>
          <form action="/<%=itemsWeb[i].username%>" style="display: <%=style2%>"  method="get">
            <button type="submit">
              <div class="card">
                <img src="data:image/<%=itemsWeb[i].img.contentType%>;base64,<%=itemsWeb[i].img.data.toString('base64')%>" alt="/images/avatar.jpg" class="pic1">
                <h1 class="tech"><%= itemsWeb[i].name %></h1>
                
              </div>
            </button>
          </form>
        <% } %>
      <% } %>
      </div>

    <h3 id="android">ANDROID</h3>
    <div class="card-wrapper">
      <% for(var i=0; i<itemsAndroid.length; i++) { %>
        <% if(itemsAndroid[i].username == authuser) { %>
          <form action="/about/<%=itemsAndroid[i].username%>" style="display: <%=style2%>" method="get">
            <button type="submit">
              <div class="card">
                <img src="data:image/<%=itemsAndroid[i].img.contentType%>;base64,<%=itemsAndroid[i].img.data.toString('base64')%>" alt="/images/avatar.jpg" class="pic1">
                <h1 class="tech"><%= itemsAndroid[i].name %></h1>
                
              </div>
            </button>
          </form>
          <% } else { %>
            <form action="/<%=itemsAndroid[i].username%>" style="display: <%=style2%>" method="get">
              <button type="submit">
                <div class="card">
                  <img src="data:image/<%=itemsAndroid[i].img.contentType%>;base64,<%=itemsAndroid[i].img.data.toString('base64')%>" alt="/images/avatar.jpg" class="pic1">
                  <h1 class="tech"><%= itemsAndroid[i].name %></h1>
                </div>
              </button>
            </form>
          <% } %>
      <% } %>
    </div>
    <h3 id="core">CORE</h3>
    <div class="card-wrapper">
      <% for(var i=0; i<itemsCore.length; i++) { %>
        <% if(itemsCore[i].username == authuser) { %>
        <form action="/about/<%=itemsCore[i].username%>" style="display: <%=style2%>" method="get">
          <button type="submit">
            <div class="card">
              <img src="data:image/<%=itemsCore[i].img.contentType%>;base64,<%=itemsCore[i].img.data.toString('base64')%>" alt="/images/avatar.jpg" class="pic1">
              <h1 class="tech"><%= itemsCore[i].name %></h1>
              
            </div>
          </button>
        </form>
        <% } else { %>
        <form action="/<%=itemsCore[i].username%>" style="display: <%=style%>" method="get">
          <button type="submit">
            <div class="card">
              <img src="data:image/<%=itemsCore[i].img.contentType%>;base64,<%=itemsCore[i].img.data.toString('base64')%>" alt="/images/avatar.jpg" class="pic1">
              <h1 class="tech"><%= itemsCore[i].name %></h1>
            </div>
          </button>
        </form>
        <% } %>
      <% } %>
    </div>
    <script src="/js/dashboard.js">
    </script>
  </body>
</html>
